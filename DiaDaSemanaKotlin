fun main() {
    print("Digite um número de 1 a 7: ")
    val dia = readLine()!!.toInt()

    val diaDaSemana = when (dia) {
        1 -> "Domingo"
        2 -> "Segunda-feira"
        3 -> "Terça-feira"
        4 -> "Quarta-feira"
        5 -> "Quinta-feira"
        6 -> "Sexta-feira"
        7 -> "Sábado"
        else -> "Dia inválido"
    }

    println("Dia da semana: $diaDaSemana")
}
